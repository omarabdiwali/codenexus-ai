{
  "name": "ai-chat",
  "displayName": "ai-chat",
  "description": "An AI Chat using OpenRouter",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "ai-chat.openChatWithSelection",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "./resources/icon.svg",
          "id": "ai-chat-view",
          "title": "AI Chat"
        }
      ]
    },
    "views": {
      "ai-chat-view": [
        {
          "type": "webview",
          "id": "ai-chat.chat",
          "name": "AI Chat",
          "icon": "./resources/icon.svg",
          "contextualTitle": "AI Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-chat.changeApiKey",
        "title": "AI Chat: Change API Key"
      },
      {
        "command": "ai-chat.openChatWithSelection",
        "title": "AI Chat: Open with Selection"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "openai": "^4.82.0",
    "showdown": "^2.1.0"
  }
}